#cloud-config
package_update: true
package_upgrade: true
packages:
  - libaio1
  - alien
  - wget
  - unzip

write_files:
  - path: /home/ubuntu/install_oraclient.sh
    content: ${install_oraclient_sh}
    permission: '0755'
    encoding: b64

runcmd:
  - chmod +x /home/ubuntu/install_oraclient.sh
  - ./home/ubuntu/install_oraclient.sh > /home/ubuntu/install_oraclient.log
    


